{% extends 'old-bootstrap-modal-layout.html.twig' %}

{% set modalSize = 'large' %}
{% block title %}指定会员{% endblock %}
{% block body %}

<table class="table table-striped table-hover" id="level-table">
	<thead>
		<tr>
			<th width="5%"></th>
	     	<th width="80%">名称</th>
	      	<th>操作</th>
		</tr>
	</thead>
	<tbody>
	  {% for memberlevel in memberlevels %}
		{% import "macro.html.twig" as admin_macro %}
		<tr id="level-tr-{{ memberlevel.id }}">
			<td></td>
		  <td>{{ memberlevel.name }}</td>
		  <td><button type="button" class="btn btn-primary btn-sm choose-vip" data-target="{{ memberlevel.id }}" data-name="{{ memberlevel.name }}">选择</button></td>
		</tr>
	  {% else %}
	    <tr><td colspan="20"><div class="empty">暂无会员记录</div></td></tr>
	  {% endfor %}
	</tbody>
</table>

{{ web_macro.paginator(paginator) }}

{% endblock %}
{% block footer %}
  <button type="button" class="btn btn-default pull-right" data-dismiss="modal">关闭</button>
 <script>app.load('vipplugin/controller/vipleveladmin/level_chooser')</script>
{% endblock %}