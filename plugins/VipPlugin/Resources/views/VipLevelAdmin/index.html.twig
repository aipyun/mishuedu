{% extends 'VipPlugin::layout.html.twig' %}

{% set menu = '_admin_vip_setting' %}
{% set capsule = 'admin_vip_level' %}

{% set script_controller = 'vipplugin/controller/vipleveladmin/list' %}

{% block main %}

  {{ web_macro.flash_messages() }}
  
  <table id="memberlevel-table" class="table table-striped table-hover" data-search-form="#user-search-form">
    <thead>
      <tr>
        <th></th>
        <th>会员等级名称</th>
        <th>月费价格</th>
        <th>年费价格</th>
        <th>会员数量</th>
        <th>加入会员</th>
        <th width="150px">操作</th>
      </tr>
    </thead>
    <tbody id="memberlevel-list" data-sort-url="{{path('admin_vip_level_sort')}}" class="sortable-list">
      {% for memberlevel in memberlevels %}
        {% include 'VipPlugin:VipLevelAdmin:tr.html.twig' with {memberlevel:memberlevel} %}
      {% else %}
        <tr><td colspan="20"><div class="empty">无会员等级记录</div></td></tr>
      {% endfor %}
    </tbody>
  </table>
  <div class="alert alert-info">
    注：会员可购买升级，升级的顺序是就上面列表中由上往下的顺序，请注意价格设置。
  </div>
  <div>
      {{ web_macro.paginator(paginator) }}
  </div>
{% endblock %}