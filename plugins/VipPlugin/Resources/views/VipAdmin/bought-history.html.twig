{% extends 'old-bootstrap-modal-layout.html.twig' %}

{% set modal_class = 'modal-lg' %}

{% block title %}{{user.nickname}}的购买历史{% endblock %}
{% block body %}
<table id="member-history-table" class="table table-striped table-hover table-bordered" data-search-form="#member-history-search-form">
  <thead>
    <tr>
      <th>购买人</th>
      <th>购买时间</th>
      <th>到期时间</th>
      <th>购买类型</th>
      <th>会员等级</th>
      <th>开通时长</th>
      <th>支付费用</th>
    </tr>
  </thead>
  <tbody>
    {% for memberHistory in memberHistories %}
    {% set level = levels[memberHistory.levelId]|default('--') %}
      {% include 'VipPlugin:VipAdmin:member-history-table-tr.html.twig' with {memberHistory:memberHistory,isModal:true} %}
    {% endfor %}
  </tbody>
</table>
 {{ web_macro.paginator(paginator) }} 
{% endblock %}