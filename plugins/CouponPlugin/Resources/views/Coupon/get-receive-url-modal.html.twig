{% extends 'old-bootstrap-modal-layout.html.twig' %}

{% block title %}获取发放地址{% endblock %}

{% block body %}

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-3 control-label">优惠码批次</label>
    <div class="col-sm-9 form-control-static">
      {{batch.name}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">发放地址</label>
    <div class="col-sm-9">
      <textarea class="form-control" id='content'>{{url}}</textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-9 col-sm-offset-3">
      <button class="btn btn-primary " id='copy'>复制</button>
    </div>
  </div>
</div>
{% endblock %}
{% block footer %}
  <button type="button" class="btn btn-default pull-right" data-dismiss="modal">关闭</button>
  <script>app.load('couponplugin/controller/coupon/copy')</script>
{% endblock %} 