{% do script(['app/js/default/header/index.js']) %}
{% set navigations = data('NavigationsTree', {}) %}
{% if mobile %}
  <div class="fixedtop">
    <div class="fixedheader wbox">
      <div class="box-cover" style="opacity: 0.8; top:0;" > </div>
      <div class="header_m" style="top:0;">
        {% include 'default/header/logo.html.twig' %}
        <div class="fixedsearch_bar ">
          <form action="{{ path('search') }}" method="get">
            <div><input type="submit" value="" class="s">
              <input type="text" placeholder="搜索课程" name="q" />
            </div>
          </form>
        </div>
        {% include 'default/header/user-operation_mobile.html.twig' %}

      </div>
    </div>
  </div>
{% else %}
<!-- 头部 -->
<div id="hd">
  <div class="hd-bot">
    <div class="wp">
      {% include 'default/header/logo.html.twig' %}
      <ul class="nav clearfix hidden-xs">
        {% include 'default/top-navigation.html.twig' with {navigations: navigations,siteNav: siteNav|default(null), isMobile: false} %}
      </ul>
      {% include 'default/header/user-operation_index.html.twig' %}



    </div>
  </div>
</div><!-- 头部 end-->
{% endif %}
